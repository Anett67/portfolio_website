<section id="projects">

    <div class="container section-title block-title d-flex align-items-center">
        <div class="horizontal-line mr-4"></div>
        <h2 class="m-0 text-uppercase">Projets
            <span>Mes Projets</span>
        </h2>   
    </div>

    <div class="projects-section container-fluid">
    
        {% for project in projects %}
            
            <div class="row single-project-block">

                <div class="col-6 image-block bg-primary" style="background-image: url({{ asset( project.image ) }})">
                    
                </div>

                <div class="col-6 project-info-block">
                
                    <div class="container block-title d-flex align-items-center">
                        <div class="horizontal-line mr-4"></div>
                        <h2 class="m-0 text-uppercase">Projet
                            <span>{{ project.title }}</span>
                        </h2>  
                    </div>

                    <p class="project-subtitle text-uppercase">{{ project.subtitle }}</p>

                </div>

            </div>

        {% endfor %}
    
    </div>

</section>